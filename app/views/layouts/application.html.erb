<!DOCTYPE html>
<html>
  <head>
    <title>Rails Vue js App</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_pack_tag 'vendor' %>
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>
  	<script>
        const BASE_URL = "<%= root_url %>";
    </script>
    <div id="login"></div>
    <% if current_user %>
      <script>
        const DATA = {
            user: <%= render(:template => "users/user.json.jbuilder", :locals => { :user => current_user }).html_safe %>
        };
      </script>
    <% end %>
    
    <%= javascript_pack_tag 'manifest' %>
    <%= javascript_pack_tag 'vendor' %>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>